@model HOA.Model.ViewModel.CreateTestViewModel

@{
    ViewBag.Title = "Sample data";
    ViewBag.Section = "TestData";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Oh snap!</strong> Please fix the listed errors and try submitting again.

            @Html.ValidationSummary()
        </div>
    }

    @Html.LabelFor(model => model.Count)@: <br />
    @Html.TextBoxFor(model => model.Count, new { @class = "form-control" })<br />
    <br />
    @:Status:<br />


    @Html.DropDownListFor(m => m.Type, new SelectList(
        new[]
        {
            new { Value = "CommunityMgrReview", Text = "Community Mgr Review" },
            new { Value = "ARBChairReview", Text = "ARB Chair Review" },
            new { Value = "CommitteeReview", Text = "Committee Review" },
            new { Value = "ARBTallyVotes", Text = "ARB Tally Votes" },
            new { Value = "HOALiasonReview", Text = "HOA Liason Review" },
            new { Value = "FinalResponse", Text = "Final Response" },
            new { Value = "CommunityMgrReturn", Text = "Community Mgr Return" },
            new { Value = "HOALiasonInput", Text = "HOA Liason Input" },
            new { Value = "Rejected", Text = "Rejected" },
            new { Value = "MissingInformation", Text = "Missing Information" },
            new { Value = "Approved", Text = "Approved" },
            new { Value = "ConditionallyApproved", Text = "Conditionally Approved" },
            new { Value = "Retracted", Text = "Retracted" },
        },
        "Value",
        "Text",
        Model.Type
    ),
    new { @class = "form-control" })
    <br />
    <br />


    <input type="submit" value="Submit" class="btn btn-primary" />

}