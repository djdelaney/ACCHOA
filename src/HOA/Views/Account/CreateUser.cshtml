@model HOA.Model.ViewModel.CreateUserViewModel
@using HOA.Model
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Add user";
}



@using (Html.BeginForm("CreateUser", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{

    <h3>Create</h3>

    @Html.AntiForgeryToken()

    @if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Oh snap!</strong> Please fix the listed errors and try submitting again.

            @Html.ValidationSummary()
        </div>
    }


    <div class="form-group">
        <label class="control-label col-xs-3">
            @Html.LabelFor(model => model.FirstName)
        </label>
        <div class="col-xs-9">
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @maxlength = "20" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-3">
            @Html.LabelFor(model => model.LastName)
        </label>
        <div class="col-xs-9">
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @maxlength = "20" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-3">
            @Html.LabelFor(model => model.Email)
        </label>
        <div class="col-xs-9">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @maxlength = "64" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-3">
            @Html.LabelFor(model => model.UserName)
        </label>
        <div class="col-xs-9">
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @maxlength = "32" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-3">
            @Html.LabelFor(model => model.Role)
        </label>
        <div class="col-xs-9">
            @Html.DropDownListFor(m => m.Role, new SelectList(
                new[]
                {
                    new { Value = RoleNames.Administrator, Text = "Administrator" },
                    new { Value = RoleNames.CommunityManager, Text = "Community Manager" },
                    new { Value = RoleNames.BoardChairman, Text = "Board Chairman" },
                    new { Value = RoleNames.BoardMember, Text = "Board Member" },
                    new { Value = RoleNames.HOALiaison, Text = "HOA Liaison" },
                },
                "Value",
                "Text"
            ),
            new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-3">
            @Html.LabelFor(model => model.Password)
        </label>
        <div class="col-xs-9">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-3">
            @Html.LabelFor(model => model.ConfirmPassword)
        </label>
        <div class="col-xs-9">
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-3 col-xs-9">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

}