@{
    ViewBag.Title = "Submissions";
}

<h3>Submission</h3>
@Model.Submission.FirstName @Model.Submission.LastName<br />
@Model.Submission.Email <br />
@Model.Submission.HouseNumber @Model.Submission.StreetName<br />
<br />
@Model.Submission.Description<br />
<br />
<b>Status:</b> @Model.Submission.Status

<br />

<b>Action</b>
@if(Model.ApproveRejectEnabled)
{
    <a href="/Submission/ApproveReject/@Model.Submission.Id">Approve or Reject</a>
}