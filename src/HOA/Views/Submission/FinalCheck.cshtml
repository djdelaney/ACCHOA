@using HOA.Model
@using HOA.Model.ViewModel
@model FinalReview
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Final review";
}

@section HeaderExtras
{
    <script>
    function UpdateCommentField(val)
    {
        if (val == 'Approved') {
            document.getElementById("UserFeedback").disabled = true;
        }
        else {
            document.getElementById("UserFeedback").disabled = false;
        }
    }
    </script>
}

<h3>Submission</h3>
@Model.Submission.FirstName @Model.Submission.LastName<br />
@Model.Submission.Email <br />
@Model.Submission.Address<br />
<br />
@Model.Submission.Description<br />
<br />

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    if (!Html.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Oh snap!</strong> Please fix the listed errors and try submitting again.

            @Html.ValidationSummary()
        </div>
    }


    @Html.HiddenFor(model => model.SubmissionId)

    @Html.LabelFor(model => model.Comments)@: <br />
    @Html.TextAreaFor(model => model.Comments, new { @class = "form-control", @maxlength = "512" })<br />
    <br />
    @:Approve application?<br />


    @Html.DropDownListFor(m => m.Status, new SelectList(
        new[]
        {
            new { Value = "Approved", Text = "Approve" },
            new { Value = "Rejected", Text = "Reject" },
            new { Value = "ConditionallyApproved", Text = "Conditionally Approve" },
            new { Value = "MissingInformation", Text = "Missing Info" },
        },
        "Value",
        "Text",
        Model.Status
    ),
    new { @class = "form-control", @onchange = "UpdateCommentField(this.value)" })
    <br />
    <br />
    @Html.LabelFor(model => model.UserFeedback)@: <br />
    @:Required for incomplete applications<br />
    @Html.TextAreaFor(model => model.UserFeedback, new { @class = "form-control", @disabled = "disabled", @maxlength = "512" })<br />
    <br />
    <br />

    <input type="submit" value="Submit" class="btn btn-primary" />

}